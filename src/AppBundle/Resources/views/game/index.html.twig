{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    <div class="well">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Current games</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#messages" role="tab">Future</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#profile" role="tab">Past</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="home" role="tabpanel">
                {% for game in currentGames %}
                    <div class="row">
                        <div class="col-xs-4 col-sm-2">
                            <img class="card-img-home float-left" height="50" width="50" src="{{ vich_uploader_asset(game.homeTeam, 'logoFile') }}" alt="Card image cap">
                        </div>
                        <div class="col-xs-4 col-sm-2">
                                <p class="card-text">{{ game.homeTeam.name }} - {{ game.guestTeam.name }}</p>
                                <p>{{ game.homeScore }} - {{ game.guestScore }}</p>
                                <p>{{ game.stadium }}, {{ game.startedAt | date('H:i, d-m-Y') }}</p>
                        </div>
                        <div class="col-xs-4 col-sm-2">
                            <img class="card-img-guest float-right" height="50" width="50" src="{{ vich_uploader_asset(game.guestTeam, 'logoFile') }}" alt="Card image cap">
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="tab-pane" id="profile" role="tabpanel">
                {% for game in futureGames %}
                <div class="row">
                    <div class="col-xs-4 col-sm-2">
                        <img class="card-img-home float-left" height="50" width="50" src="{{ vich_uploader_asset(game.homeTeam, 'logoFile') }}" alt="Card image cap">
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        <p class="card-text">{{ game.homeTeam.name }} - {{ game.guestTeam.name }}</p>
                        <p>{{ game.homeScore }} - {{ game.guestScore }}</p>
                        <p>{{ game.stadium }}, {{ game.startedAt | date('H:i, d-m-Y') }}</p>
                    </div>
                    <div class="col-xs-4 col-sm-2">
                        <img class="card-img-guest float-right" height="50" width="50" src="{{ vich_uploader_asset(game.guestTeam, 'logoFile') }}" alt="Card image cap">
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="tab-pane" id="messages" role="tabpanel">
                {% for game in pastGames %}
                    <div class="row">
                        <div class="col-xs-4 col-sm-2">
                            <img class="card-img-home float-left" height="50" width="50" src="{{ vich_uploader_asset(game.homeTeam, 'logoFile') }}" alt="Card image cap">
                        </div>
                        <div class="col-xs-4 col-sm-2">
                            <p class="card-text">{{ game.homeTeam.name }} - {{ game.guestTeam.name }}</p>
                            <p>{{ game.homeScore }} - {{ game.guestScore }}</p>
                            <p>{{ game.stadium }}, {{ game.startedAt | date('H:i, d-m-Y') }}</p>
                        </div>
                        <div class="col-xs-4 col-sm-2">
                            <img class="card-img-guest float-right" height="50" width="50" src="{{ vich_uploader_asset(game.guestTeam, 'logoFile') }}" alt="Card image cap">
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>

{% endblock %}
